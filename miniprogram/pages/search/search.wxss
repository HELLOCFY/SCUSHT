/* pages/viewMessage/viewMessage.wxss */
.viewMessagebox{
  width: 90vmin;
  height: 40vmin;
  margin-left:5vmin;
  margin-right:5vmin;
  border-bottom:0.5vmin solid gray;
  border-radius: 1vmin;
  box-shadow: 0 2vmin 2vmin gray;
  margin-top:5vmin;
  position: relative;
}

.userImage{
  margin-top:3vmin;
  height: 15vmin;
  width: 15vmin;
  border-radius:50%;
  margin-left: 2vmin;
}
.viewMessagebox .userName{
  margin-top:3vmin;
  font-size: 6vmin;
  display: inline-block;
  width:65vmin;
  height: 10vmin;
  line-height: 10vmin;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  vertical-align: top;
  margin-left: 5vmin;
}

.viewMessagebox .time{
  margin-top:3vmin;
  display: inline-block;
  width:65vmin;
  height: 10vmin;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  vertical-align: top;
  margin-left: 5vmin;
  position: absolute;
  top:10vmin;
  left: 15vmin;
  color: gray;
}




.messageBox{
  margin-top:3vmin;
  font-size: 4vmin;
  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 3;  /*最多显示5行*/
  overflow: hidden;  /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
  word-break: break-all;  /*强制英文单词自动换行*/
  padding-left: 3vmin;
  padding-right: 3vmin;
}
.messageTitle{
  margin-top:3vmin;
  font-size: 5vmin;
  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 3;  /*最多显示5行*/
  overflow: hidden;  /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
  word-break: break-all;  /*强制英文单词自动换行*/
  padding-left: 3vmin;
  padding-right: 3vmin;
}
