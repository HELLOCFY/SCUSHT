/* pages/index/index.wxss */
.banner{
  width: 100%;
  height: 380rpx;
  /*border: 1px solid green;*/
}
.banner swiper{
  height: 100%;
  width: 100%;
  margin-bottom: 5vmin;
}
.banner image{
  width: 100%;
  height: 380rpx;
}
.indexChooseBox{
  width: 100%;
  height: 30vmin;
  margin-top:20vmin;
  margin-left: 2vmin;
}
.indexChoose{
  width: 24vmin;
  height: 30vmin;
  display: inline-block;
}
.indexChoosePic{
  width: 18vmin;
  height: 18vmin;
  padding:2vmin;
}
.indexChooseTxt{
  font-size: 6vmin;
  text-align: center;
  text-shadow: 5rpx 0rpx 3rpx blue,-5rpx 0rpx 3rpx yellow;
  color:rgb(100,200,255);
  font-family: "blod";
}
.header {
  position: relative;
  height:119.5rpx;
  background: linear-gradient(to bottom, #56ccf2, #2f80ed);
  top:22vmin;
}

.bgWare {
  position: absolute;
  left: 0;
  bottom: -2rpx;
  width: 100%;
  mix-blend-mode: screen;
  height: 120rpx;
  transform:rotate(180deg);
}
.contact{
  margin-top:5vmin;
  color: gray;
  text-align: center;
}